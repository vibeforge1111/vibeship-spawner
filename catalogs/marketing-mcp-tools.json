{
  "version": 1,
  "team": "marketing",
  "description": "MCP tools specification for marketing team execution - what agents need to actually do the work",

  "core_mcps": {
    "description": "Essential MCPs every marketing agent needs",
    "tools": [
      {
        "id": "filesystem",
        "name": "Filesystem",
        "status": "available",
        "source": "official",
        "purpose": "Read/write local files for assets, configs, content",
        "marketing_uses": [
          "Save generated images and videos",
          "Read brand guidelines and templates",
          "Write content drafts and scripts",
          "Manage asset libraries"
        ],
        "config_example": {
          "command": "npx",
          "args": ["-y", "@anthropic-ai/mcp-filesystem", "/path/to/marketing-assets"]
        }
      },
      {
        "id": "fetch",
        "name": "Web Fetch",
        "status": "available",
        "source": "official",
        "purpose": "HTTP requests to APIs and web content",
        "marketing_uses": [
          "Call AI generation APIs",
          "Fetch trending topics",
          "Access analytics endpoints",
          "Retrieve reference content"
        ],
        "config_example": {
          "command": "npx",
          "args": ["-y", "@anthropic-ai/mcp-fetch"]
        }
      }
    ]
  },

  "generation_mcps": {
    "description": "MCPs for AI content generation APIs",
    "tools": [
      {
        "id": "midjourney",
        "name": "Midjourney API",
        "status": "needs_development",
        "priority": "high",
        "purpose": "Generate images via Midjourney API",
        "capabilities": [
          "imagine - Generate image from prompt",
          "variations - Create variations of image",
          "upscale - Upscale selected image",
          "describe - Get prompt from image",
          "blend - Blend multiple images"
        ],
        "api_source": "midjourney.com (unofficial APIs: useapi.net, imagineapi.dev)",
        "env_vars": ["MIDJOURNEY_API_KEY", "MIDJOURNEY_SERVER_ID", "MIDJOURNEY_CHANNEL_ID"],
        "example_tool_schema": {
          "name": "midjourney_imagine",
          "description": "Generate an image with Midjourney",
          "input_schema": {
            "type": "object",
            "properties": {
              "prompt": { "type": "string", "description": "Image generation prompt" },
              "aspect_ratio": { "type": "string", "enum": ["1:1", "16:9", "9:16", "4:5", "3:2"] },
              "stylize": { "type": "number", "minimum": 0, "maximum": 1000 },
              "version": { "type": "string", "default": "6.1" }
            },
            "required": ["prompt"]
          }
        }
      },
      {
        "id": "runway",
        "name": "Runway Gen-3 API",
        "status": "needs_development",
        "priority": "high",
        "purpose": "Generate videos via Runway API",
        "capabilities": [
          "generate - Text-to-video generation",
          "image_to_video - Animate still image",
          "extend - Extend video duration",
          "status - Check generation status"
        ],
        "api_source": "runwayml.com (official API available)",
        "env_vars": ["RUNWAY_API_KEY"],
        "example_tool_schema": {
          "name": "runway_generate",
          "description": "Generate a video with Runway Gen-3",
          "input_schema": {
            "type": "object",
            "properties": {
              "prompt": { "type": "string", "description": "Video generation prompt" },
              "duration": { "type": "number", "enum": [5, 10] },
              "aspect_ratio": { "type": "string", "enum": ["16:9", "9:16", "1:1"] },
              "init_image": { "type": "string", "description": "Base64 or URL of initial image" }
            },
            "required": ["prompt"]
          }
        }
      },
      {
        "id": "fal-ai",
        "name": "Fal.ai Multi-Model",
        "status": "needs_development",
        "priority": "high",
        "purpose": "Access multiple AI models via Fal.ai (Flux, SDXL, video models)",
        "capabilities": [
          "flux_pro - High quality image generation",
          "flux_schnell - Fast image generation",
          "stable_video - Video from image",
          "face_swap - Face replacement",
          "upscale - Image upscaling"
        ],
        "api_source": "fal.ai (official API)",
        "env_vars": ["FAL_KEY"],
        "example_tool_schema": {
          "name": "fal_generate",
          "description": "Generate content with Fal.ai models",
          "input_schema": {
            "type": "object",
            "properties": {
              "model": { "type": "string", "enum": ["flux-pro", "flux-schnell", "stable-video-diffusion"] },
              "prompt": { "type": "string" },
              "image_size": { "type": "string", "enum": ["square", "landscape_16_9", "portrait_9_16"] }
            },
            "required": ["model", "prompt"]
          }
        }
      },
      {
        "id": "replicate",
        "name": "Replicate Multi-Model",
        "status": "needs_development",
        "priority": "medium",
        "purpose": "Access diverse AI models via Replicate",
        "capabilities": [
          "run - Run any Replicate model",
          "predictions_get - Get prediction status",
          "models_search - Find models"
        ],
        "api_source": "replicate.com (official API)",
        "env_vars": ["REPLICATE_API_TOKEN"],
        "example_tool_schema": {
          "name": "replicate_run",
          "description": "Run a model on Replicate",
          "input_schema": {
            "type": "object",
            "properties": {
              "model": { "type": "string", "description": "Model identifier (owner/name)" },
              "input": { "type": "object", "description": "Model-specific inputs" }
            },
            "required": ["model", "input"]
          }
        }
      },
      {
        "id": "suno",
        "name": "Suno Music API",
        "status": "needs_development",
        "priority": "medium",
        "purpose": "Generate music with Suno AI",
        "capabilities": [
          "generate - Create music from prompt",
          "extend - Extend existing track",
          "get_credits - Check remaining credits"
        ],
        "api_source": "suno.com (unofficial APIs available)",
        "env_vars": ["SUNO_API_KEY"],
        "example_tool_schema": {
          "name": "suno_generate",
          "description": "Generate music with Suno",
          "input_schema": {
            "type": "object",
            "properties": {
              "prompt": { "type": "string", "description": "Music description/style" },
              "lyrics": { "type": "string", "description": "Optional lyrics" },
              "instrumental": { "type": "boolean", "default": false }
            },
            "required": ["prompt"]
          }
        }
      },
      {
        "id": "elevenlabs",
        "name": "ElevenLabs Voice API",
        "status": "needs_development",
        "priority": "high",
        "purpose": "Generate voiceovers and audio",
        "capabilities": [
          "text_to_speech - Generate speech from text",
          "voice_clone - Clone a voice from audio",
          "sound_effects - Generate sound effects",
          "voices_list - List available voices"
        ],
        "api_source": "elevenlabs.io (official API)",
        "env_vars": ["ELEVENLABS_API_KEY"],
        "example_tool_schema": {
          "name": "elevenlabs_tts",
          "description": "Generate speech with ElevenLabs",
          "input_schema": {
            "type": "object",
            "properties": {
              "text": { "type": "string", "description": "Text to speak" },
              "voice_id": { "type": "string", "description": "Voice identifier" },
              "stability": { "type": "number", "minimum": 0, "maximum": 1 },
              "clarity": { "type": "number", "minimum": 0, "maximum": 1 }
            },
            "required": ["text", "voice_id"]
          }
        }
      },
      {
        "id": "heygen",
        "name": "HeyGen Avatar API",
        "status": "needs_development",
        "priority": "medium",
        "purpose": "Create AI avatar videos",
        "capabilities": [
          "create_video - Generate avatar video",
          "list_avatars - Get available avatars",
          "create_avatar - Create custom avatar",
          "get_status - Check video status"
        ],
        "api_source": "heygen.com (official API)",
        "env_vars": ["HEYGEN_API_KEY"],
        "example_tool_schema": {
          "name": "heygen_video",
          "description": "Create an AI avatar video",
          "input_schema": {
            "type": "object",
            "properties": {
              "script": { "type": "string", "description": "Script for avatar to speak" },
              "avatar_id": { "type": "string", "description": "Avatar to use" },
              "voice_id": { "type": "string", "description": "Voice for avatar" },
              "background": { "type": "string", "description": "Background image/video URL" }
            },
            "required": ["script", "avatar_id"]
          }
        }
      }
    ]
  },

  "publishing_mcps": {
    "description": "MCPs for content distribution",
    "tools": [
      {
        "id": "buffer",
        "name": "Buffer/Social Publishing",
        "status": "needs_development",
        "priority": "medium",
        "purpose": "Schedule and publish social media content",
        "capabilities": [
          "schedule_post - Schedule content for publishing",
          "publish_now - Publish immediately",
          "get_queue - View scheduled posts",
          "analytics - Get post performance"
        ],
        "api_source": "buffer.com or similar (official APIs available)",
        "env_vars": ["BUFFER_ACCESS_TOKEN"]
      },
      {
        "id": "wordpress",
        "name": "WordPress/CMS",
        "status": "available",
        "source": "community",
        "purpose": "Publish blog content",
        "capabilities": [
          "create_post - Create new blog post",
          "update_post - Update existing post",
          "upload_media - Upload images",
          "list_categories - Get categories/tags"
        ],
        "api_source": "WordPress REST API",
        "env_vars": ["WP_URL", "WP_USERNAME", "WP_APP_PASSWORD"]
      }
    ]
  },

  "analytics_mcps": {
    "description": "MCPs for performance tracking",
    "tools": [
      {
        "id": "google-analytics",
        "name": "Google Analytics",
        "status": "needs_development",
        "priority": "low",
        "purpose": "Track content performance",
        "capabilities": [
          "get_report - Pull analytics report",
          "realtime - Get real-time data",
          "content_performance - Content-specific metrics"
        ],
        "api_source": "Google Analytics Data API",
        "env_vars": ["GA_PROPERTY_ID", "GOOGLE_CREDENTIALS"]
      }
    ]
  },

  "development_priority": {
    "description": "Recommended order for MCP development",
    "phases": [
      {
        "phase": 1,
        "name": "Core Generation",
        "mcps": ["midjourney", "runway", "elevenlabs"],
        "rationale": "Cover image, video, and voice - the core creative assets"
      },
      {
        "phase": 2,
        "name": "Extended Generation",
        "mcps": ["fal-ai", "heygen", "suno"],
        "rationale": "Add model variety, avatars, and music"
      },
      {
        "phase": 3,
        "name": "Distribution",
        "mcps": ["buffer", "wordpress"],
        "rationale": "Enable actual publishing"
      },
      {
        "phase": 4,
        "name": "Analytics",
        "mcps": ["google-analytics"],
        "rationale": "Close the loop with performance data"
      }
    ]
  },

  "workarounds": {
    "description": "How to work without dedicated MCPs",
    "approaches": [
      {
        "method": "Fetch MCP + API Docs",
        "description": "Use the generic fetch MCP to call APIs directly",
        "pros": ["Works now", "No development needed"],
        "cons": ["More complex prompts", "No type safety", "Manual auth handling"]
      },
      {
        "method": "Browser Automation",
        "description": "Use browser MCP for web interfaces",
        "pros": ["Works with any tool", "No API needed"],
        "cons": ["Slower", "Less reliable", "Can break with UI changes"]
      },
      {
        "method": "Human in the Loop",
        "description": "Agent provides prompts/specs, human executes in tool",
        "pros": ["Works today", "Full tool access"],
        "cons": ["Slower", "Requires human availability", "Not automated"]
      }
    ],
    "recommended_interim": "Use Fetch MCP with detailed API documentation in prompts. Graduate to dedicated MCPs as they're developed."
  },

  "agent_mcp_mapping": {
    "description": "Which MCPs each agent needs",
    "mappings": {
      "creative-director": ["filesystem", "fetch", "all generation MCPs for orchestration"],
      "visual-creator": ["filesystem", "midjourney", "runway", "fal-ai"],
      "video-producer": ["filesystem", "runway", "heygen", "elevenlabs", "suno"],
      "copywriter": ["filesystem", "fetch"],
      "content-strategist": ["filesystem", "fetch", "google-analytics"],
      "performance-marketer": ["filesystem", "fetch", "google-analytics", "buffer"],
      "social-media-manager": ["filesystem", "fetch", "buffer"],
      "brand-guardian": ["filesystem"]
    }
  }
}
