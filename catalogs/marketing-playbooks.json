{
  "version": 1,
  "team": "marketing",
  "description": "Workflow playbooks that orchestrate marketing agents for common scenarios",
  "playbooks": [
    {
      "id": "product-launch-campaign",
      "name": "Product Launch Campaign",
      "description": "Full campaign from strategy to multi-channel execution for a product launch",
      "duration": "2-4 weeks",
      "complexity": "high",
      "agents": [
        "creative-director",
        "content-strategist",
        "copywriter",
        "visual-creator",
        "video-producer",
        "performance-marketer",
        "social-media-manager",
        "brand-guardian"
      ],
      "phases": [
        {
          "phase": 1,
          "name": "Strategy & Planning",
          "lead": "content-strategist",
          "support": ["creative-director"],
          "steps": [
            {
              "step": 1,
              "action": "Define campaign objectives and KPIs",
              "agent": "content-strategist",
              "inputs": ["product info", "target audience", "business goals"],
              "outputs": ["campaign brief", "success metrics"],
              "prompt_template": "Create a campaign brief for {product_name} launch targeting {audience}. Goals: {goals}. Define SMART objectives and KPIs."
            },
            {
              "step": 2,
              "action": "Develop content calendar",
              "agent": "content-strategist",
              "inputs": ["campaign brief", "launch date", "channels"],
              "outputs": ["content calendar", "asset list"],
              "prompt_template": "Build a content calendar for {duration} leading to {launch_date}. Channels: {channels}. Include content types, publish dates, and required assets."
            },
            {
              "step": 3,
              "action": "Set creative direction",
              "agent": "creative-director",
              "inputs": ["campaign brief", "brand guidelines"],
              "outputs": ["creative brief", "visual direction", "mood boards"],
              "prompt_template": "Define creative direction for {campaign_name}. Align with brand guidelines while pushing creative boundaries. Specify visual style, tone, and key messaging themes."
            }
          ]
        },
        {
          "phase": 2,
          "name": "Content Creation",
          "lead": "creative-director",
          "support": ["copywriter", "visual-creator", "video-producer"],
          "steps": [
            {
              "step": 1,
              "action": "Write campaign copy",
              "agent": "copywriter",
              "inputs": ["creative brief", "campaign calendar"],
              "outputs": ["headlines", "body copy", "CTAs", "email sequences"],
              "prompt_template": "Write all copy for {campaign_name} campaign. Include: hero headline, supporting copy, 3 CTA variations, email sequence (5 emails), social captions for each platform."
            },
            {
              "step": 2,
              "action": "Generate visual assets",
              "agent": "visual-creator",
              "inputs": ["creative brief", "copy", "asset requirements"],
              "outputs": ["hero images", "social graphics", "ad creatives"],
              "prompt_template": "Create visual assets for {campaign_name}. Generate: hero image ({aspect_ratio}), social variants for each platform, 5 ad creative variations. Style: {visual_direction}."
            },
            {
              "step": 3,
              "action": "Produce video content",
              "agent": "video-producer",
              "inputs": ["creative brief", "copy", "visual assets"],
              "outputs": ["hero video", "social cuts", "ad videos"],
              "prompt_template": "Produce video content for {campaign_name}. Create: 30s hero video, 15s social cuts, 6s bumper ads. Use {video_style} style with voiceover/avatar."
            },
            {
              "step": 4,
              "action": "Quality review",
              "agent": "brand-guardian",
              "inputs": ["all creative assets"],
              "outputs": ["approved assets", "revision notes"],
              "prompt_template": "Review all {campaign_name} assets for brand consistency, quality, and compliance. Check: tone, visual guidelines, legal requirements. Provide specific feedback for any revisions."
            }
          ]
        },
        {
          "phase": 3,
          "name": "Launch & Amplification",
          "lead": "social-media-manager",
          "support": ["performance-marketer"],
          "steps": [
            {
              "step": 1,
              "action": "Schedule organic content",
              "agent": "social-media-manager",
              "inputs": ["approved content", "content calendar"],
              "outputs": ["scheduled posts", "engagement plan"],
              "prompt_template": "Schedule {campaign_name} content across all platforms. Optimize posting times for {target_audience}. Create engagement response templates."
            },
            {
              "step": 2,
              "action": "Launch paid campaigns",
              "agent": "performance-marketer",
              "inputs": ["ad creatives", "targeting specs", "budget"],
              "outputs": ["live campaigns", "tracking setup"],
              "prompt_template": "Launch {campaign_name} ad campaigns. Budget: {budget}. Platforms: {ad_platforms}. Set up A/B tests for headlines and creatives. Configure conversion tracking."
            },
            {
              "step": 3,
              "action": "Community engagement",
              "agent": "social-media-manager",
              "inputs": ["live posts", "engagement templates"],
              "outputs": ["engagement metrics", "community insights"],
              "prompt_template": "Monitor and engage with {campaign_name} audience. Respond to comments, amplify positive sentiment, address concerns. Track trending topics for real-time content opportunities."
            }
          ]
        },
        {
          "phase": 4,
          "name": "Optimization & Reporting",
          "lead": "performance-marketer",
          "support": ["content-strategist"],
          "steps": [
            {
              "step": 1,
              "action": "Performance analysis",
              "agent": "performance-marketer",
              "inputs": ["campaign metrics", "KPIs"],
              "outputs": ["performance report", "optimization recommendations"],
              "prompt_template": "Analyze {campaign_name} performance. Compare against KPIs: {kpis}. Identify top performing content, audiences, and channels. Recommend optimizations."
            },
            {
              "step": 2,
              "action": "Campaign retrospective",
              "agent": "content-strategist",
              "inputs": ["performance report", "team feedback"],
              "outputs": ["learnings document", "future recommendations"],
              "prompt_template": "Conduct {campaign_name} retrospective. Document: what worked, what didn't, key learnings, recommendations for future campaigns."
            }
          ]
        }
      ],
      "success_criteria": [
        "All KPIs met or exceeded",
        "Content delivered on schedule",
        "Brand guidelines maintained",
        "Positive engagement ratio"
      ]
    },
    {
      "id": "weekly-content-production",
      "name": "Weekly Content Production",
      "description": "Ongoing content production cycle for consistent social and blog output",
      "duration": "weekly recurring",
      "complexity": "medium",
      "agents": [
        "content-strategist",
        "copywriter",
        "visual-creator",
        "social-media-manager",
        "brand-guardian"
      ],
      "phases": [
        {
          "phase": 1,
          "name": "Planning (Monday)",
          "lead": "content-strategist",
          "steps": [
            {
              "step": 1,
              "action": "Review performance and trends",
              "agent": "content-strategist",
              "inputs": ["last week metrics", "trending topics", "upcoming events"],
              "outputs": ["content priorities", "topic list"],
              "prompt_template": "Review last week's content performance. Identify: top performers, underperformers, emerging trends. Recommend this week's content priorities aligned with {business_goals}."
            },
            {
              "step": 2,
              "action": "Assign content pieces",
              "agent": "content-strategist",
              "inputs": ["topic list", "content calendar"],
              "outputs": ["weekly content assignments"],
              "prompt_template": "Create weekly content assignments: {num_blog_posts} blog posts, {num_social_posts} social posts per platform, {num_emails} newsletter. Assign to appropriate agents with briefs."
            }
          ]
        },
        {
          "phase": 2,
          "name": "Creation (Tuesday-Wednesday)",
          "lead": "copywriter",
          "support": ["visual-creator"],
          "steps": [
            {
              "step": 1,
              "action": "Write content",
              "agent": "copywriter",
              "inputs": ["content briefs"],
              "outputs": ["draft content"],
              "prompt_template": "Write content for: {content_assignments}. Match brand voice and optimize for {primary_goal}. Include SEO keywords: {keywords}."
            },
            {
              "step": 2,
              "action": "Create visuals",
              "agent": "visual-creator",
              "inputs": ["content drafts", "brand assets"],
              "outputs": ["content visuals"],
              "prompt_template": "Create visuals for this week's content. Generate: blog featured images, social graphics for each post, story templates. Maintain visual consistency."
            }
          ]
        },
        {
          "phase": 3,
          "name": "Review & Approve (Thursday)",
          "lead": "brand-guardian",
          "steps": [
            {
              "step": 1,
              "action": "Quality check",
              "agent": "brand-guardian",
              "inputs": ["all content and visuals"],
              "outputs": ["approved content", "revision requests"],
              "prompt_template": "Review all weekly content for brand alignment, quality, and accuracy. Check: grammar, tone, visual guidelines, fact accuracy. Approve or request specific revisions."
            }
          ]
        },
        {
          "phase": 4,
          "name": "Publish & Engage (Friday-Weekend)",
          "lead": "social-media-manager",
          "steps": [
            {
              "step": 1,
              "action": "Schedule and publish",
              "agent": "social-media-manager",
              "inputs": ["approved content"],
              "outputs": ["published content", "schedule"],
              "prompt_template": "Schedule approved content across platforms. Optimize timing for {target_audience} engagement. Set up weekend monitoring."
            },
            {
              "step": 2,
              "action": "Engage and amplify",
              "agent": "social-media-manager",
              "inputs": ["live posts"],
              "outputs": ["engagement log"],
              "prompt_template": "Monitor published content. Respond to engagement, share to stories, cross-promote top performers. Log notable interactions for next week's review."
            }
          ]
        }
      ],
      "success_criteria": [
        "All scheduled content published",
        "Engagement rate maintains/improves",
        "Response time under 2 hours",
        "Zero brand guideline violations"
      ]
    },
    {
      "id": "video-series-production",
      "name": "Video Series Production",
      "description": "Multi-episode video content production pipeline",
      "duration": "1-2 weeks per episode",
      "complexity": "high",
      "agents": [
        "creative-director",
        "copywriter",
        "video-producer",
        "visual-creator",
        "brand-guardian"
      ],
      "phases": [
        {
          "phase": 1,
          "name": "Series Planning",
          "lead": "creative-director",
          "steps": [
            {
              "step": 1,
              "action": "Define series concept",
              "agent": "creative-director",
              "inputs": ["content goals", "audience insights"],
              "outputs": ["series bible", "episode outlines"],
              "prompt_template": "Create a video series concept for {series_topic}. Define: series arc, {num_episodes} episode themes, visual style, presenter approach. Target: {target_audience}."
            }
          ]
        },
        {
          "phase": 2,
          "name": "Episode Pre-Production",
          "lead": "copywriter",
          "steps": [
            {
              "step": 1,
              "action": "Write episode script",
              "agent": "copywriter",
              "inputs": ["episode outline", "series bible"],
              "outputs": ["full script", "shot list"],
              "prompt_template": "Write script for Episode {episode_num}: {episode_title}. Include: hook (first 3 seconds), key points, transitions, CTA. Format for {video_length} runtime."
            },
            {
              "step": 2,
              "action": "Create visual storyboard",
              "agent": "visual-creator",
              "inputs": ["script", "series style guide"],
              "outputs": ["storyboard", "reference images"],
              "prompt_template": "Create visual storyboard for Episode {episode_num}. Generate reference images for key scenes. Maintain series visual consistency."
            }
          ]
        },
        {
          "phase": 3,
          "name": "Episode Production",
          "lead": "video-producer",
          "steps": [
            {
              "step": 1,
              "action": "Generate video content",
              "agent": "video-producer",
              "inputs": ["script", "storyboard", "brand assets"],
              "outputs": ["raw video segments"],
              "prompt_template": "Produce Episode {episode_num} video content. Use {video_approach}: AI avatars/footage/animation. Generate all scenes per storyboard."
            },
            {
              "step": 2,
              "action": "Create supporting visuals",
              "agent": "visual-creator",
              "inputs": ["video content", "script"],
              "outputs": ["b-roll", "graphics", "lower thirds"],
              "prompt_template": "Create supporting visuals: motion graphics, lower thirds, transitions, thumbnail options. Match series visual language."
            },
            {
              "step": 3,
              "action": "Final assembly",
              "agent": "video-producer",
              "inputs": ["all video and visual assets"],
              "outputs": ["assembled episode"],
              "prompt_template": "Assemble final episode: combine all segments, add graphics, music, sound design. Export in multiple formats for {platforms}."
            }
          ]
        },
        {
          "phase": 4,
          "name": "Review & Publish",
          "lead": "brand-guardian",
          "support": ["creative-director"],
          "steps": [
            {
              "step": 1,
              "action": "Final review",
              "agent": "brand-guardian",
              "inputs": ["assembled episode"],
              "outputs": ["approved episode", "revision notes"],
              "prompt_template": "Review Episode {episode_num} for quality, brand alignment, accessibility (captions). Verify all elements meet standards."
            },
            {
              "step": 2,
              "action": "Prepare distribution",
              "agent": "video-producer",
              "inputs": ["approved episode"],
              "outputs": ["platform-optimized versions", "metadata"],
              "prompt_template": "Prepare episode for distribution: create platform-specific versions ({platforms}), write descriptions, generate thumbnails, add captions."
            }
          ]
        }
      ],
      "success_criteria": [
        "Episodes delivered on schedule",
        "View completion rate > 40%",
        "Series consistency maintained",
        "Accessibility requirements met"
      ]
    },
    {
      "id": "ad-campaign-optimization",
      "name": "Ad Campaign Optimization",
      "description": "Continuous optimization cycle for paid advertising",
      "duration": "ongoing (daily/weekly cycles)",
      "complexity": "medium",
      "agents": [
        "performance-marketer",
        "copywriter",
        "visual-creator"
      ],
      "phases": [
        {
          "phase": 1,
          "name": "Daily Monitoring",
          "lead": "performance-marketer",
          "steps": [
            {
              "step": 1,
              "action": "Check campaign health",
              "agent": "performance-marketer",
              "inputs": ["campaign metrics"],
              "outputs": ["health report", "alerts"],
              "prompt_template": "Daily check for {campaign_names}: spend vs budget, CPA trends, conversion rates, ad fatigue signals. Flag any anomalies or opportunities."
            }
          ]
        },
        {
          "phase": 2,
          "name": "Weekly Analysis",
          "lead": "performance-marketer",
          "steps": [
            {
              "step": 1,
              "action": "Performance deep dive",
              "agent": "performance-marketer",
              "inputs": ["weekly metrics", "A/B test results"],
              "outputs": ["performance report", "optimization plan"],
              "prompt_template": "Weekly analysis: compare creative performance, audience segments, placements. Identify winners/losers. Recommend budget reallocation and new tests."
            },
            {
              "step": 2,
              "action": "Generate new ad variations",
              "agent": "copywriter",
              "inputs": ["top performing ads", "optimization insights"],
              "outputs": ["new ad copy variations"],
              "prompt_template": "Create {num_variations} new ad copy variations based on top performers. Test: new hooks, different CTAs, alternative value props."
            },
            {
              "step": 3,
              "action": "Create new creative variations",
              "agent": "visual-creator",
              "inputs": ["top performing creatives", "copy variations"],
              "outputs": ["new ad creatives"],
              "prompt_template": "Generate {num_variations} new creative variations. Test: new imagery, different layouts, alternative visual hooks. Maintain brand consistency."
            }
          ]
        },
        {
          "phase": 3,
          "name": "Implementation",
          "lead": "performance-marketer",
          "steps": [
            {
              "step": 1,
              "action": "Deploy optimizations",
              "agent": "performance-marketer",
              "inputs": ["optimization plan", "new creatives"],
              "outputs": ["updated campaigns", "test structure"],
              "prompt_template": "Implement optimizations: pause underperformers, reallocate budget to winners, launch new creative tests. Document all changes."
            }
          ]
        }
      ],
      "success_criteria": [
        "CPA decreases week-over-week",
        "ROAS improves or maintains",
        "Fresh creative always in rotation",
        "No ad fatigue"
      ]
    },
    {
      "id": "brand-refresh-initiative",
      "name": "Brand Refresh Initiative",
      "description": "Comprehensive brand update across all touchpoints",
      "duration": "4-8 weeks",
      "complexity": "very high",
      "agents": [
        "creative-director",
        "brand-guardian",
        "visual-creator",
        "copywriter",
        "video-producer",
        "content-strategist"
      ],
      "phases": [
        {
          "phase": 1,
          "name": "Audit & Discovery",
          "lead": "brand-guardian",
          "support": ["creative-director"],
          "steps": [
            {
              "step": 1,
              "action": "Brand audit",
              "agent": "brand-guardian",
              "inputs": ["current brand assets", "usage examples"],
              "outputs": ["audit report", "consistency issues"],
              "prompt_template": "Conduct comprehensive brand audit: review all current materials, identify inconsistencies, catalog assets, assess brand perception. Document all findings."
            },
            {
              "step": 2,
              "action": "Define refresh scope",
              "agent": "creative-director",
              "inputs": ["audit report", "business objectives"],
              "outputs": ["refresh brief", "priority areas"],
              "prompt_template": "Define brand refresh scope based on audit. Identify: elements to keep, elements to evolve, elements to replace. Prioritize by impact and effort."
            }
          ]
        },
        {
          "phase": 2,
          "name": "Creative Development",
          "lead": "creative-director",
          "support": ["visual-creator"],
          "steps": [
            {
              "step": 1,
              "action": "Develop new visual identity",
              "agent": "visual-creator",
              "inputs": ["refresh brief", "brand strategy"],
              "outputs": ["new visual system", "style explorations"],
              "prompt_template": "Develop refreshed visual identity: explore {num_directions} directions for color, typography, imagery style. Create concept boards for each direction."
            },
            {
              "step": 2,
              "action": "Refine voice and messaging",
              "agent": "copywriter",
              "inputs": ["refresh brief", "brand values"],
              "outputs": ["messaging framework", "voice guide"],
              "prompt_template": "Develop refreshed brand voice and messaging framework. Update: tagline options, key messages, tone guidelines, content principles."
            },
            {
              "step": 3,
              "action": "Review and select direction",
              "agent": "creative-director",
              "inputs": ["visual explorations", "messaging options"],
              "outputs": ["selected direction", "refinement notes"],
              "prompt_template": "Review all creative directions. Select winner based on brand alignment, differentiation, flexibility. Provide refinement guidance."
            }
          ]
        },
        {
          "phase": 3,
          "name": "System Creation",
          "lead": "brand-guardian",
          "support": ["visual-creator", "copywriter"],
          "steps": [
            {
              "step": 1,
              "action": "Build brand guidelines",
              "agent": "brand-guardian",
              "inputs": ["selected direction", "all brand elements"],
              "outputs": ["comprehensive brand guide"],
              "prompt_template": "Create comprehensive brand guidelines document: visual standards, voice guidelines, usage rules, do's and don'ts. Make actionable for all team members."
            },
            {
              "step": 2,
              "action": "Create asset library",
              "agent": "visual-creator",
              "inputs": ["brand guidelines"],
              "outputs": ["template library", "asset kit"],
              "prompt_template": "Build brand asset library: templates for {asset_types}, icon set, image library, pattern library. Ensure all assets follow new guidelines."
            },
            {
              "step": 3,
              "action": "Create AI prompt library",
              "agent": "creative-director",
              "inputs": ["brand guidelines", "visual style"],
              "outputs": ["AI prompt templates"],
              "prompt_template": "Create AI prompt library for brand-consistent generation: Midjourney style prompts, video generation templates, copy style examples. Ensure AI tools can maintain brand."
            }
          ]
        },
        {
          "phase": 4,
          "name": "Rollout",
          "lead": "content-strategist",
          "support": ["all agents"],
          "steps": [
            {
              "step": 1,
              "action": "Plan rollout sequence",
              "agent": "content-strategist",
              "inputs": ["brand assets", "touchpoint inventory"],
              "outputs": ["rollout plan", "priority matrix"],
              "prompt_template": "Create brand rollout plan: prioritize touchpoints by visibility and impact. Define timeline for updating: website, social, ads, email, video, etc."
            },
            {
              "step": 2,
              "action": "Execute rollout",
              "agent": "creative-director",
              "inputs": ["rollout plan", "new assets"],
              "outputs": ["updated touchpoints"],
              "prompt_template": "Coordinate brand rollout across all touchpoints. Delegate asset updates to appropriate agents. Track completion and quality."
            },
            {
              "step": 3,
              "action": "Quality verification",
              "agent": "brand-guardian",
              "inputs": ["updated touchpoints"],
              "outputs": ["verification report"],
              "prompt_template": "Verify brand rollout quality across all touchpoints. Check consistency, identify gaps, flag issues. Confirm brand refresh complete."
            }
          ]
        }
      ],
      "success_criteria": [
        "100% touchpoints updated",
        "Brand consistency score > 90%",
        "Team trained on new guidelines",
        "AI prompt library complete"
      ]
    }
  ],
  "quickstart_workflows": [
    {
      "id": "blog-post",
      "name": "Create Blog Post",
      "agents": ["copywriter", "visual-creator"],
      "duration": "1-2 hours",
      "steps": [
        "Copywriter: Write SEO-optimized blog post on {topic}",
        "Visual Creator: Generate featured image and in-post graphics",
        "Copywriter: Create social promotion copy"
      ]
    },
    {
      "id": "social-post",
      "name": "Create Social Post",
      "agents": ["copywriter", "visual-creator"],
      "duration": "30 minutes",
      "steps": [
        "Copywriter: Write platform-specific caption",
        "Visual Creator: Generate post visual/carousel"
      ]
    },
    {
      "id": "email-campaign",
      "name": "Create Email Campaign",
      "agents": ["copywriter", "visual-creator", "brand-guardian"],
      "duration": "2-4 hours",
      "steps": [
        "Copywriter: Write email sequence ({num_emails} emails)",
        "Visual Creator: Create email header graphics",
        "Brand Guardian: Review for brand alignment and compliance"
      ]
    },
    {
      "id": "ad-creative-set",
      "name": "Create Ad Creative Set",
      "agents": ["copywriter", "visual-creator", "performance-marketer"],
      "duration": "2-3 hours",
      "steps": [
        "Performance Marketer: Define ad specs and objectives",
        "Copywriter: Write headline and copy variations",
        "Visual Creator: Generate image/video ad creatives",
        "Performance Marketer: Set up A/B test structure"
      ]
    },
    {
      "id": "explainer-video",
      "name": "Create Explainer Video",
      "agents": ["copywriter", "video-producer", "visual-creator"],
      "duration": "4-8 hours",
      "steps": [
        "Copywriter: Write video script",
        "Visual Creator: Create storyboard and graphics",
        "Video Producer: Generate video with avatar/animation",
        "Video Producer: Add voiceover and sound design"
      ]
    }
  ]
}
