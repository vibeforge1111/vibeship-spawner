{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Skill Registry",
  "description": "Machine-readable index of all vibeship-orchestrator skills",
  "type": "object",
  "required": ["version", "specialists", "tag_index", "layers"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "generated": {
      "type": "string",
      "format": "date"
    },
    "specialists": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "path", "description", "tags", "triggers", "pairs_with", "layer"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Unique identifier matching the skill filename"
          },
          "path": {
            "type": "string",
            "description": "Relative path from skills directory"
          },
          "description": {
            "type": "string",
            "description": "Use when [condition] - [what it enforces]"
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Searchable keywords"
          },
          "triggers": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Natural language phrases that should activate this skill"
          },
          "pairs_with": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Other specialists commonly used alongside"
          },
          "layer": {
            "type": "integer",
            "enum": [1, 2, 3],
            "description": "1=Core, 2=Integration, 3=Polish"
          }
        }
      }
    },
    "tag_index": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string" }
      },
      "description": "Inverted index: tag -> [specialist names]"
    },
    "layers": {
      "type": "object",
      "properties": {
        "1": { "$ref": "#/definitions/layer" },
        "2": { "$ref": "#/definitions/layer" },
        "3": { "$ref": "#/definitions/layer" }
      }
    },
    "squads": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/squad"
      },
      "description": "Pre-configured specialist teams for common features"
    }
  },
  "definitions": {
    "layer": {
      "type": "object",
      "required": ["name", "description", "specialists"],
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "specialists": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "squad": {
      "type": "object",
      "required": ["description", "lead", "support"],
      "properties": {
        "description": { "type": "string" },
        "lead": { "type": "string" },
        "support": {
          "type": "array",
          "items": { "type": "string" }
        },
        "on_call": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
